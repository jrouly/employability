#!/usr/bin/env bash

BASEDIR=$(cd $(dirname $0); pwd)
. $BASEDIR/../bin/lib.sh

SNAPSHOT=$1
if [ -z $SNAPSHOT ]
then
  echo "Usage: ./export-data <uuid>"
  exit 1
fi

echo "Creating local repo."
create_local_repo

echo "Creating snapshot $SNAPSHOT."
create_snapshot local $SNAPSHOT

echo "Compressing snapshot directory."
tar czf snapshots.tar.gz ./data/elasticsearch-snapshots/local

echo "Exported as: ./snapshots.tar.gz"
echo "Done."
