#!/usr/bin/env bash

BASEDIR=$(cd $(dirname $0); pwd)
. $BASEDIR/../bin/lib.sh

SNAPSHOT=$1
if [ -z $SNAPSHOT ]
then
  echo "Usage: ./export-data <uuid>"
  exit 1
fi

echo "Creating local repo."
create_local_repo

echo "Creating snapshot $SNAPSHOT."
create_snapshot local $SNAPSHOT

echo "Exporting snapshot $SNAPSHOT."
rm -rf local
docker cp employability-elasticsearch:/usr/share/elasticsearch/snapshots/local local

echo "Done."
