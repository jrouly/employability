# API definition.
GET     /api/echo                               net.rouly.employability.web.echo.EchoController.echo

GET     /api/topics                             net.rouly.employability.web.api.ApiController.allTopics
GET     /api/topics/:id                         net.rouly.employability.web.api.ApiController.topicById(id: String)

# Application definition.
GET     /                                       net.rouly.employability.web.application.ApplicationController.index
GET     /topics                                 net.rouly.employability.web.application.ApplicationController.allTopics
GET     /topics/:id                             net.rouly.employability.web.application.ApplicationController.topicById(id: String)
GET     /topics/:id/docs                        net.rouly.employability.web.application.ApplicationController.docsByTopicId(id: String)
GET     /docs                                   net.rouly.employability.web.application.ApplicationController.allDocuments
GET     /docs/:id                               net.rouly.employability.web.application.ApplicationController.docById(id: String)
GET     /assets/*file                           controllers.Assets.at(file)
